# Configuration Blueprint - AMD Parc Informatique
# Copiez ce fichier vers .env et remplissez les valeurs

# ===== CONFIGURATION GIT =====
# URL de votre repository Git
GIT_REPOSITORY=https://github.com/votre-username/amd-parc-informatique

# ===== SÉCURITÉ =====
# Clé secrète JWT pour l'authentification (générez une clé sécurisée)
JWT_SECRET=votre_secret_jwt_tres_securise_2024_blueprint

# Mot de passe de la base de données PostgreSQL
DB_PASSWORD=mot_de_passe_base_donnees_securise_blueprint

# ===== CONFIGURATION BACKEND =====
# Environnement (production pour Blueprint)
NODE_ENV=production

# Port du backend (Blueprint gère automatiquement)
PORT=10000

# URL de la base de données (Blueprint génère automatiquement)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://parcdb_gkw5_user:${DB_PASSWORD}@blueprint-postgres:5432/parcdb_gkw5

# ===== CONFIGURATION FRONTEND =====
# URL de l'API backend (Blueprint génère automatiquement)
NEXT_PUBLIC_API_URL=https://api.amd-parc.blueprint.com

# ===== MIGRATIONS ET SEEDING =====
# Exécuter les migrations automatiquement (true/false)
RUN_MIGRATIONS=true

# Exécuter le seeding automatiquement (true/false)
RUN_SEEDING=true

# ===== CONFIGURATION BLUEPRINT =====
# Nom du projet Blueprint
BLUEPRINT_PROJECT_NAME=amd-parc-informatique

# Région Blueprint (optionnel)
BLUEPRINT_REGION=us-east-1

# Plan de ressources (free, starter, pro, enterprise)
BLUEPRINT_PLAN=starter

# ===== MONITORING =====
# Activer le monitoring (true/false)
ENABLE_MONITORING=true

# Activer les alertes (true/false)
ENABLE_ALERTS=true

# Seuil d'alerte CPU (%)
CPU_ALERT_THRESHOLD=80

# Seuil d'alerte mémoire (%)
MEMORY_ALERT_THRESHOLD=85

# ===== BACKUPS =====
# Activer les backups automatiques (true/false)
ENABLE_BACKUPS=true

# Fréquence des backups (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Rétention des backups (en jours)
BACKUP_RETENTION_DAYS=30

# ===== SSL/TLS =====
# Activer SSL automatique (true/false)
ENABLE_SSL=true

# Fournisseur de certificats (letsencrypt, custom)
SSL_PROVIDER=letsencrypt

# ===== SCALING =====
# Activer le scaling automatique (true/false)
ENABLE_AUTO_SCALING=true

# Nombre minimum d'instances backend
BACKEND_MIN_INSTANCES=1

# Nombre maximum d'instances backend
BACKEND_MAX_INSTANCES=3

# Nombre minimum d'instances frontend
FRONTEND_MIN_INSTANCES=1

# Nombre maximum d'instances frontend
FRONTEND_MAX_INSTANCES=2

# ===== DOMAINES =====
# Domaine principal (Blueprint génère automatiquement)
PRIMARY_DOMAIN=amd-parc.blueprint.com

# Sous-domaine API (Blueprint génère automatiquement)
API_DOMAIN=api.amd-parc.blueprint.com

# ===== LOGS =====
# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# Activer les logs structurés (true/false)
STRUCTURED_LOGS=true

# ===== PERFORMANCE =====
# Timeout des requêtes (en secondes)
REQUEST_TIMEOUT=30

# Taille du pool de connexions PostgreSQL
DB_POOL_SIZE=20

# Timeout d'inactivité des connexions (en millisecondes)
DB_IDLE_TIMEOUT=30000

# ===== SÉCURITÉ AVANCÉE =====
# Activer les headers de sécurité (true/false)
ENABLE_SECURITY_HEADERS=true

# Activer la protection CSRF (true/false)
ENABLE_CSRF_PROTECTION=true

# Activer la limitation de taux (true/false)
ENABLE_RATE_LIMITING=true

# Limite de requêtes par minute
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===== DÉVELOPPEMENT =====
# Mode debug (true/false) - À désactiver en production
DEBUG=false

# Activer les outils de développement (true/false) - À désactiver en production
ENABLE_DEV_TOOLS=false

# ===== NOTIFICATIONS =====
# Email pour les notifications Blueprint
BLUEPRINT_NOTIFICATION_EMAIL=votre-email@example.com

# Activer les notifications par email (true/false)
ENABLE_EMAIL_NOTIFICATIONS=true

# Activer les notifications Slack (true/false)
ENABLE_SLACK_NOTIFICATIONS=false

# Webhook Slack (si activé)
SLACK_WEBHOOK_URL=

# ===== MAINTENANCE =====
# Mode maintenance (true/false)
MAINTENANCE_MODE=false

# Message de maintenance
MAINTENANCE_MESSAGE=Le système est en maintenance. Veuillez réessayer plus tard.

# ===== ANALYTICS =====
# Activer les analytics Blueprint (true/false)
ENABLE_ANALYTICS=true

# ID de suivi Google Analytics (optionnel)
GOOGLE_ANALYTICS_ID=

# ===== INTÉGRATIONS =====
# Activer l'intégration Sentry pour le monitoring d'erreurs (true/false)
ENABLE_SENTRY=false

# DSN Sentry (si activé)
SENTRY_DSN=

# Activer l'intégration LogRocket pour le replay de session (true/false)
ENABLE_LOGROCKET=false

# ID LogRocket (si activé)
LOGROCKET_ID=
